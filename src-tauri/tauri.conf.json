{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Nexus",
  "version": "0.0.41",
  "identifier": "com.nexus.nexus",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev -- --mode tauri",
    "beforeBuildCommand": "npm run build -- --mode tauri"
  },
  "app": {
    "windows": [
      {
        "title": "Nexus",
        "width": 1280,
        "height": 800,
        "minWidth": 1024,
        "minHeight": 640,
        "resizable": true,
        "fullscreen": false,
        "devtools": true
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": [
          "$APPCACHE/**"
        ]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "updater": {
      "endpoints": [
        "https://github.com/cookiesen77-rgb/nexus-source/releases/latest/download/latest.json"
      ],
      "pubkey": "",
      "windows": {
        "installMode": "passive"
      }
    }
  }
}
