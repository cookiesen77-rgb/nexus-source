{
  "name": "nexus",
  "description": "Nexus - AI workflow canvas",
  "private": true,
  "version": "0.0.77",
  "author": "Nexus",
  "type": "module",
  "main": "electron/main.js",
  "scripts": {
    "dev": "vite",
    "dev:electron": "concurrently -k \"vite --mode electron\" \"wait-on http://localhost:5173 && electron .\"",
    "dev:tauri": "tauri dev",
    "build": "vite build",
    "build:electron": "vite build --mode electron && electron-builder",
    "build:electron:local": "vite build --mode electron && CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder --publish never --config.mac.hardenedRuntime=false",
    "build:electron:local:dir": "vite build --mode electron && CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder --dir --publish never --config.mac.hardenedRuntime=false",
    "build:tauri": "tauri build",
    "tauri": "tauri",
    "preview": "vite preview"
  },
  "dependencies": {
    "@tauri-apps/api": "^2.9.1",
    "@tauri-apps/plugin-dialog": "^2.6.0",
    "@tauri-apps/plugin-fs": "^2.4.5",
    "@tauri-apps/plugin-http": "^2.5.6",
    "@tauri-apps/plugin-opener": "^2.5.3",
    "@tauri-apps/plugin-process": "^2.3.1",
    "@tauri-apps/plugin-updater": "^2.9.0",
    "@xyflow/react": "^12.10.0",
    "axios": "^1.13.2",
    "clsx": "^2.1.1",
    "lucide-react": "^0.468.0",
    "mammoth": "^1.11.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.28.0",
    "tailwind-merge": "^2.5.4",
    "zustand": "^4.5.5"
  },
  "devDependencies": {
    "@electron/notarize": "^2.2.1",
    "@tauri-apps/cli": "^2.9.2",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react-swc": "^3.7.1",
    "autoprefixer": "^10.4.23",
    "concurrently": "^8.2.2",
    "electron": "^31.0.2",
    "electron-builder": "^24.13.3",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.7.2",
    "vite": "^5.2.0",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.nexus.nexus",
    "productName": "Nexus",
    "asar": true,
    "icon": "src-tauri/icons/icon",
    "afterSign": "electron/notarize.cjs",
    "files": [
      "dist/**/*",
      "electron/**/*",
      "package.json"
    ],
    "directories": {
      "output": "release"
    },
    "mac": {
      "target": "dmg",
      "hardenedRuntime": true,
      "entitlements": "electron/entitlements.mac.plist",
      "entitlementsInherit": "electron/entitlements.mac.inherit.plist",
      "gatekeeperAssess": false
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
